{
  "name": "raj-browser",
  "productName": "Raj Browser",
  "version": "0.00.01",
  "appVersion": "0.00.01",
  "description": "A simple, modern,  UI focussed web browser.",
  "main": "./main/main.js",
  "author": "Rajaniraiyn",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "_start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder build"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron": "^13.2.3"
  },
  "build": {
    "appId": "com.raj.browser",
    "productName": "Raj Browser",
    "copyright": "Copyright Â© 2021 ${author}",
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "icon": "./appIcons/icon"
    }
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.22.5",
    "electron-context-menu": "^3.1.1",
    "electron-download-manager": "^2.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "node-fetch": "^2.6.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./appIcons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "RajBrowser"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
